{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "allowJs": true,
        "types": ["vite/client", "vitest/importMeta", "@mastergo/plugin-typings/dist/index"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["src/*"],
            "#/*": ["common/*"],
            "@/*": ["masterGo/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","*.d.ts","masterGo/**/*.ts","common/**/*.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
